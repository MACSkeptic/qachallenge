<h1>Listing QAs</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Interests</th>
    <th>Admin?</th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=raw user.name %></td>
    <td><%= user.email %></td>
    <td>
      <ul>
        <% user.interests.each do |i| %>
          <li><%= i.name %></li>
        <% end %>
      </ul>
    </td>
    <td class="center"><%= user.admin? ? 'Yes' : 'No' %></td>
    <td><a href="users/<%= user.id %>">Details</a></td>
  </tr>
<% end %>
</table>
<a href="/">Back to Home</a>
